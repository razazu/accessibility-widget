{
  "name": "@razazu/accessibility-widget",
  "version": "1.1.0",
  "description": "FlowRaz Accessibility Widget - תוסף נגישות חכם לכל אתר. React component + Vanilla JS with full RTL/Hebrew support.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "unpkg": "dist/accessibility-widget.min.js",
  "jsdelivr": "dist/accessibility-widget.min.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./vanilla": {
      "import": "./dist/accessibility-widget.min.js",
      "require": "./dist/accessibility-widget.min.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "accessibility",
    "a11y",
    "react",
    "widget",
    "rtl",
    "hebrew",
    "wcag",
    "vanilla",
    "wordpress",
    "elementor"
  ],
  "author": {
    "name": "Raz Azulay",
    "email": "raz@flowraz.com",
    "url": "https://razazulay.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/razazu/accessibility-widget.git"
  },
  "homepage": "https://github.com/razazu/accessibility-widget#readme",
  "bugs": {
    "url": "https://github.com/razazu/accessibility-widget/issues"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
