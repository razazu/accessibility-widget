{
  "name": "@razazu/accessibility-widget",
  "version": "1.0.0",
  "description": "React accessibility widget with RTL support - font size, contrast, animations control and more",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "accessibility",
    "a11y",
    "react",
    "widget",
    "rtl",
    "hebrew",
    "wcag"
  ],
  "author": "Raz Azulay",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/razazu/accessibility-widget.git"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
